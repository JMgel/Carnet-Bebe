<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carnet_Bebe.Components.ButtonsAndLine"
             x:Name="Root">

    <Grid BindingContext="{x:Reference Root}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <Button Grid.Row="0" Grid.Column="0" Text="{Binding Button1Text}" Command="{Binding Button1Command}" />
        <Button Grid.Row="0" Grid.Column="1" Text="{Binding Button2Text}" Command="{Binding Button2Command}" Clicked="Button1_Clicked" />

        <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
               Text="{Binding LabelText}"
               HorizontalOptions="Center"
               VerticalOptions="Center"/>
    </Grid>

</ContentView>
