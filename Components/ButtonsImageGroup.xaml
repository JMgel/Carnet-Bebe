<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Carnet_Bébé.Components.ButtonsImageGroup"
             Title="ButtonsImageGroup">
    <!--<VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>-->

    <Grid>
      
        <Image Source="{Binding HeaderImage}"
               HorizontalOptions="Center"
               VerticalOptions="Start"/>

        <HorizontalStackLayout HorizontalOptions="Center"
                               Spacing="20"
                               VerticalOptions="End">
            <Button ImageSource="{Binding Button1Image}"
                    Text="{Binding Button1Text}"
                    Command="{Binding Button1Command}"
                    ContentLayout="Top, 10"/>

            <Button ImageSource="{Binding Button2Image}"
                    Text="{Binding Button2Text}"
                    Command="{Binding Button2Command}"
                    ContentLayout="Top, 10"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>