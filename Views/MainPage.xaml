<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Carnet_Bebe.Components"
             x:Class="CarnetBebe.View.MainPage"
             Title="MainPage">


    <VerticalStackLayout>
        <VerticalStackLayout>
            <local:ButtonsImageGroup
            HeaderImage="dotnet_bot.png"
            Button1Image="dotnet_bot.png"
            Button1Text="Action 1"
            Button2Image="dotnet_bot.png"
            Button2Text="Action 2"
            Button1Command="{Binding Button1Command}"
            Button2Command="{Binding Button2Command}"
            />

            <local:ButtonsImageGroup
            HeaderImage="dotnet_bot.png"
            Button1Image="dotnet_bot.png"
            Button1Text="Autre action"
            Button2Image="dotnet_bot.png"
            Button2Text="Option"
            Button1Command="{Binding Button1Command}"
            Button2Command="{Binding Button2Command}"/>
        </VerticalStackLayout>
    </VerticalStackLayout>

</ContentPage>
